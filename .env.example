# Server Configuration
HOST=0.0.0.0
PORT=8080
# Optional: The external URL of the daemon, e.g., https://your-domain.com
# If set, this will be used to construct the audio URL for casting.
# EXTERNAL_URL=
DEBUG=false
RELOAD=false
WORKERS=1

# FastAPI Configuration
TITLE=VoiceCast TTS Daemon API
DESCRIPTION=Text-to-Speech service with Google Cast integration
VERSION=1.0.0
DOCS_URL=/docs
REDOC_URL=/redoc

# Deepgram Configuration
DEEPGRAM_API_KEY=your_deepgram_api_key_here
DEEPGRAM_MODEL=aura-2-helena-en
DEEPGRAM_TIMEOUT=30.0

# Google Cast Configuration
GOOGLE_CAST_DEVICE_NAME=Your Google Nest Device Name
CAST_DISCOVERY_TIMEOUT=15.0
CAST_CONNECTION_TIMEOUT=15.0
CAST_PLAYBACK_TIMEOUT=60.0

# Audio Configuration
AUDIO_OUTPUT_DIR=./audio
AUDIO_RETENTION_DAYS=7
AUDIO_MAX_FILES=50
AUDIO_FORMAT=wav
AUDIO_CACHE_ENABLED=true
AUDIO_CACHE_MAX_SIZE=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/voicecast-daemon.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=json

# Daemon Configuration
PID_FILE=./voicecast-daemon.pid

# Security Configuration
API_KEY=your_secret_api_key
ALLOWED_HOSTS=["*"]
CORS_ORIGINS=["*"]
MAX_REQUEST_SIZE=1048576
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
